{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["react", "react-native"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "src/types", "app", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
